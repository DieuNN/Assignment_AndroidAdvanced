<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtSemesterItemName"
        android:textSize="8pt"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester name example"/>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/txtSemesterItemStartDate"
        android:layout_below="@id/txtSemesterItemName"
        android:text="Start date example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/txtSemesterItemEndDate"
        android:layout_below="@id/txtSemesterItemStartDate"
        android:text="End date example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/txtSemesterItemNote"
        android:layout_below="@id/txtSemesterItemEndDate"
        android:text="Note example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/btnSemesterItemEdit"
        android:background="@null"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>