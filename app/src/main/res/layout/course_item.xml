<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayoutCourseItem">

    <TextView
        android:id="@+id/txtCourseItemName"
        android:textSize="8pt"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course name example"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_below="@+id/txtCourseItemName"
        android:id="@+id/txtCourseClassItemName"
        android:textSize="8pt"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class name example"/>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/txtCourseItemStartDate"
        android:layout_below="@id/txtCourseClassItemName"
        android:text="Start date example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/txtCourseItemEndDate"
        android:layout_below="@id/txtCourseItemStartDate"
        android:text="End date example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/txtCourseItemNote"
        android:layout_below="@id/txtCourseItemEndDate"
        android:text="Note example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/btnCourseItemEdit"
        android:background="@null"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>