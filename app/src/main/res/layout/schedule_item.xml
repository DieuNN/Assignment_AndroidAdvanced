<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--val Id:Int, val semesterName:String, val className:String, val courseName:String,val fromHour:String, val toHour:String, val note:String-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/relativeLayoutScheduleItem">

        <TextView
            android:id="@+id/txtScheduleOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order: 1" />

        <TextView
            android:id="@+id/txtScheduleSemesterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtScheduleOrder"
            android:layout_marginTop="8dp"
            android:text="Semester name example"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtScheduleClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtScheduleSemesterName"
            android:layout_marginTop="8dp"
            android:text="Class name example"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtScheduleStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtScheduleClassName"
            android:layout_marginTop="8dp"
            android:text="Start At: " />

        <TextView
            android:layout_marginStart="8dp"
            android:id="@+id/txtScheduleEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtScheduleClassName"
            android:layout_toRightOf="@+id/txtScheduleStartTime"
            android:layout_marginTop="8dp"
            android:text="End At: " />

        <TextView
            android:id="@+id/txtScheduleNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtScheduleEndTime"
            android:layout_marginTop="8dp"
            android:text="Note: " />


    </RelativeLayout>

</RelativeLayout>